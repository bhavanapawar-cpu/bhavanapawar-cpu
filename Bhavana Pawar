def celsius_to_kelvin(c):
    return c + 273.15

def fahrenheit_to_celsius(f):
    return (f - 32) * 5/9

def fahrenheit_to_kelvin(f):
    return (f - 32) * 5/9 + 273.15

def kelvin_to_celsius(k):
    return k - 273.15

def kelvin_to_fahrenheit(k):
    return (k - 273.15) * 9/5 + 32

# Main logic
def convert_temperature():
    print("Temperature Converter ğŸŒ¡ï¸")
    temp = float(input("Enter temperature value: "))
    unit = input("Enter the unit (C, F, K): ").upper()

    if unit == "C":
        print(f"{temp}Â°C is:")
        print(f"{celsius_to_fahrenheit(temp):.2f}Â°F")
        print(f"{celsius_to_kelvin(temp):.2f}K")
    elif unit == "F":
        print(f"{temp}Â°F is:")
        print(f"{fahrenheit_to_celsius(temp):.2f}Â°C")
        print(f"{fahrenheit_to_kelvin(temp):.2f}K")
    elif unit == "K":
        print(f"{temp}K is:")
        print(f"{kelvin_to_celsius(temp):.2f}Â°C")
        print(f"{kelvin_to_fahrenheit(temp):.2f}Â°F")
    else:
        print("Invalid unit. Please use C, F, or K.")

# Run the program
convert_temperature()

